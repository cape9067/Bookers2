<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
 <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
   <% end %>
<%= form_with model: @user do |f| %>
  <div>
  <label for="inputName">Name</label>
  </div>
  <div>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
  <label for="inputImage">ProfileImage</label>
  </div>
  <div>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div>
   <label for="inputIntroduction">Introduction</label>
   </div>
  <div>
  <%= f.text_area :introduction %>
  </div>
  <div>
  <%= f.submit "Update User" %>
  </div>
<% end %>
</div>
</div>
</div>


